#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>

#define SYMBOLS 1
#define NUMBERS 2
#define NAV 3
#define FUNCTION 4
#define BLUETOOTH 5

/ {
    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;
            tapping-term-ms = <150>;
            quick-tap-ms = <0>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default {
// --------------------------------------------------------------------------------------------------------------------------------------------------------------------
//  '    |  ,  |  .  |  P/Nav  |  Y  |           |  F/Fn  |  G  |  C/Caps  |    R    |  L   |
// A/Sym |  O/Ctrl  |  E/Alt  |  U/Cmd  |  I  |           |  D  |  H/Cmd  |  T/Alt  |    N/Ctrl    |  S/Sym |
// Esc/Lsft|  Q  |  J  |  K  |  X  |           |  B  |  M  |  W  |    V    |Z/Rsft|
// | Mute | SPC/Num | Bspc |  ( Caps )       ( Play/Pause )  | Tab | Ent |     |
           bindings = <
            &lt BLUETOOTH APOS &kp COMMA &kp DOT &lt NAV P &kp Y &lt FUNCTION F &kp G &hm CAPS C &kp R  &kp L
            &lt SYMBOLS A &hm LCTRL O &hm LALT E &hm LCMD U &kp I &kp D &hm RCMD H &hm RALT T &hm RCTRL N &lt SYMBOLS S
            &hm LSHFT ESC &kp Q &kp J &kp K &kp X &kp CAPS &kp C_PP &kp B &kp M &kp W &kp V &hm RSHIFT Z
            &kp C_MUTE &lt NUMBERS SPACE &kp BSPC &kp TAB &kp RET &none
            >;
            // TODO: I would __love__ to do `&kp BSPC &key_repeat` instead for the latter here
            sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP &inc_dec_kp BSPC DOT>;
        };
        symbols {
// --------------------------------------------------------------------------------------------------------------------------------------------------------------------
//  !  |  @  |  {  |  }  |     |                |         |    <    |    >   |  *  |   #  |
//  ^  |  $  |  (  |  )  |  \  |                |    &    |    =    |    -   |  :  |   ;  |
//  ~  |  `  |  [  |  ]  |     |                |         |    +    |    _   |  %  |   ?  |
//         |  ,,  | //\ | |/&  |  ,,   |  sarcasm  |    `    |    "    |   ,,   |
           bindings = <
            &kp EXCL &hm LS(LCTRL) AT &hm LS(LALT) LBRC &hm LS(LCMD) RBRC &none &none &hm RS(RCMD) LT &hm RS(RALT) GT &hm RS(RCTRL) ASTERISK &hm HASH LA(N3)
            &kp CARET &hm LCTRL DOLLAR &hm LALT LPAR &hm LCMD RPAR &kp BACKSLASH &kp AMPS &hm RCMD EQL &hm RALT MINUS &hm RCTRL COLON &kp SEMICOLON
            &kp TILDE &kp GRAVE &kp LBKT &kp RBKT &none &trans &sarcasm &none &kp PLUS &kp UNDERSCORE &kp PERCENT &kp QMARK
            &trans &mt BACKSLASH SLASH &mt AMPS PIPE &kp GRAVE &kp DQT &trans
           >;
            sensor-bindings = <&inc_dec_kp C_BRI_DEC C_BRI_INC &inc_dec_kp K_SCROLL_DOWN K_SCROLL_UP>;

        };
        numbers {
// --------------------------------------------------------------------------------------------------------------------------------------------------------------------
//     |     |     |     |     |                |         |    4    |    5   |  6  |   7  |
//     |     |     |     |     |                |   DEL   |    0    |    1   | 2/: |   3  |
//     |     | vol- | vol+ |   |                |         |    8    |    9   | +/- | *//  |
//         |      |     |      |     |      |    =    |    .    |      |
           bindings = <
	    &none &none &none &none &none &none &kp N4 &kp N5 &kp N6 &kp N7
	    &none &none &none &none &none &kp DEL &kp N0 &kp N1 &mt COLON N2 &kp N3
	    &none &none &kp C_VOL_DN &kp C_VOL_UP &none &trans &trans &none &kp N8 &kp N9 &mt MINUS PLUS &mt SLASH ASTERISK
	    &none &none &none &kp EQL &kp DOT &none
            >;
        };
// --------------------------------------------------------------------------------------------------------------------------------------------------------------------
//     |     |     |     |     |                |         |         |    ^   |     |      |
//     |     |     |     |     |                |         |    <    |    v   |  >  |      |
//     |     |     |     |     |                |         |   HOME  |        | END |      |
//         |      |     |      |     |      |    PgDN   |   PgUP  |      |
        nav {
           bindings = <
	    &none &none &none &none &none &none &none &kp UP &none &none
	    &none &none &none &none &none &none &kp LEFT &kp DOWN &kp RIGHT &none
	    &none &none &none &none &none &trans &trans &none &kp HOME &none &kp END &none
	    &none &none &none &kp PG_DN &kp PG_UP &none
            >;
        };
// --------------------------------------------------------------------------------------------------------------------------------------------------------------------
//  F5 |  F6 | F7  | F8  |     |                |         |         |        |     |      |
//  F1 |  F2 | F3  | F4  | DEL |                |         |         |        |     |      |
//  F9 | F10 | F11 | F12 |     |                |   ,,    |   ,,    |        |     |      |
//         |      |     |      |     |      |           |         |      |
        fn {
           bindings = <
            &kp F5 &kp F6 &kp F7 &kp F8 &none &none &none &none &none &none
            &kp F1 &kp F2 &kp F3 &kp F4 &kp DEL &none &none &none &none &none
            &kp F9 &kp F10 &kp F11 &kp F12 &none &trans &trans &none &none &none &none &none
	    &none &none &none &none &none &none 
            >;
            sensor-bindings = <&inc_dec_kp C_BRI_DEC C_BRI_INC>;
        };
// --------------------------------------------------------------------------------------------------------------------------------------------------------------------
//     |     |     |     |     |                |         |         |        |     |      |
//     |     |     |     |     |                |   P0    |    P1   |   P2   |  P3 |  P4  |
//     |     |     |     |     |                |         |         |        |     |      |
//         |      |     |  CLR |     |      |           |         |      |
        bt {
           bindings = <
            &none &none &none &none &none &none &none &none &none &none
            &none &none &none &none &none &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4
            &none &none &none &none &none &none &none &none &none &none
	    &none &none &bt BT_CLR &none &none &none 
            >;
        };
    };
};
